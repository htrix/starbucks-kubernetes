node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Update GIT') {
            script {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    withCredentials([usernamePassword(credentialsId: 'github', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        //def encodedPassword = URLEncoder.encode("$GIT_PASSWORD",'UTF-8')
                        sh "git config user.email test@example.com"
                        sh "git config user.name HtecGroup"
                        //sh "git switch master"
                        sh "cd kubernetes"
                        sh "cat manifest.yaml"
                        sh "sed -i 's+htrix/starbucks-kubernetes.*+htrix/starbucks-kubernetes:${DOCKERTAG}+g' manifest.yaml"
                        sh "cat manifest.yaml"
                        sh "git add ."
                        sh "git commit -m 'Done by Jenkins Job changemanifest: ${env.BUILD_NUMBER}'"
                        sh "git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/${GIT_USERNAME}/starbucks-kubernetes.git HEAD:main"
      }
    }
  }
}
}